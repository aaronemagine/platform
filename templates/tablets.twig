

{% extends 'includes/main.twig' %}

{% block content %}

{% if not currentUser %}
    {% redirect 'index' %}
{% endif %}

{% set user = craft.app.user.identity %}
{% set tablets = craft.entries.section('tablet').authorId(user.id).all() %}

<div class="flex min-h-screen">

    {% include 'includes/sidebar.twig' %}

    <!-- Main Content Area -->
    <div class="flex-grow w-full bg-grey-500 p-4">

        {% if craft.app.session.getFlash('error')|length == 0 %}
            <div style="color: green;">{{ craft.app.session.getFlash('notice') }}</div>
        {% endif %}
        {% for message in craft.app.session.getFlash('error') %}
            <div style="color: red;">{{ message }}</div>
        {% endfor %}


        <div class="border rounded-lg shadow-lg border-gray-700 bg-gray-800 mt-4 p-6">
            <h1 class="text-xl font-bold text-white mb-2">My Tablets</h1>
                {% if tablets|length %}
                    <table class="min-w-full text-white">
                        <thead class="bg-gray-700">
                            <tr>
                                <th class="w-1/5 py-2 text-center">Tablet ID</th>
                                <th class="w-1/3 py-2 text-center">Tablet Name</th>
                                <th class="w-1/5 py-2 text-center">Venue</th>
                                <th class="w-1/5 py-2 text-center">UUID</th>
                                <th class="w-1/5 py-2 text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for tablet in tablets %}
                                <tr class="{{ loop.index is odd ? 'bg-transparent' : 'bg-gray-950' }}">
                                    <td class="text-center py-2">{{ tablet.id }}</td>
                                    <td class="text-center py-2">{{ tablet.title }}</td>
                                    <td class="text-center py-2">
                                        {% set relatedVenues = tablet.venue.all() %}
                                        {% if relatedVenues | length %}
                                            {{ relatedVenues|first.title }}
                                        {% else %}
                                            No Venue
                                        {% endif %}
                                    </td>
                                    <td class="text-center py-2">{{ tablet.uuid }}</td>
                                    <td class="text-center py-2">
                                        <a href="{{ url('edit-tablet', { id: tablet.id }) }}" class="bg-teal-700 hover:bg-teal-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <p class="mt-10"><a href="{{ url('edit-tablet') }}" class="bg-amber-700 hover:bg-amber-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Add a new Tablet</a>.</p>
                {% else %}
                    <p class="mt-10"m style="color: red;">No Tablets found.</p><p> <a href="{{ url('edit-tablet') }}" class="text-blue-500">Add a new Tablet</a></p>
                {% endif %}
            </div>
        </div>
    </div>
    
</div>

{% endblock %}
