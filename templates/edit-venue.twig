

{% extends 'includes/main.twig' %}

{% block content %}

{% if not currentUser %}
    {% redirect 'index' %}
{% endif %}

{% set user = craft.app.user.identity %}
{% set venueId = craft.app.request.getQueryParam('id') %}
{% set venue = venueId ? craft.entries.section('venues').id(venueId).one() : null %}

{% set selectedMovies = venue.movies.all() %}


<div class="flex">
    {% include 'includes/sidebar.twig' %}

    <!-- Main Content Area -->
    <main class="flex-1 bg-gray-900 p-6">
            <div class="w-4/4 border rounded-lg shadow 2xl:col-span-2 border-gray-700 sm:p-6 bg-gray-800 mt-4">
        <div class="container mx-auto mt-10">

            <form method="post" class="bg-gray-700 shadow-md rounded px-8 pt-6 pb-8 mb-4">
            
                {{ csrfInput() }}
                <input type="hidden" name="action" value="entries/save-entry">
                {{ redirectInput('venues') }}

    
                {# If there's a venue, include its ID #}
                {% if venue %}
                    <input type="hidden" name="entryId" value="{{ venue.id }}">
                {% endif %}

                <input type="hidden" name="sectionId" value="3">

                <div class="mb-4">
                    <label class="block text-white text-sm font-bold mb-2" for="title">
                        Title
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                           id="title" 
                           type="text" 
                           name="title" 
                           value="{{ venue ? venue.title : '' }}" 
                           required>
                </div>

                <div class="mb-6">
                    <label class="block text-white text-sm font-bold mb-2" for="adminRecordData">
                        Record Data?
                    </label>
                   <input type="hidden" name="fields[adminRecordData]" value="0" >
                   <input id="adminRecordData" 
                   type="checkbox" 
                   name="fields[adminRecordData]"
                   value="1" 
                   {% if venue and venue.adminRecordData %}checked{% endif %}>
                </div>

                <div class="mb-4">
                    <label class="block text-white text-sm font-bold mb-2" for="venueTicketPrice">
                        Require Internet?
                    </label>
                    <input type="hidden" name="fields[adminRequireInternet]" value="0">
                    <input id="adminRequireInternet" 
                   type="checkbox" 
                   name="fields[adminRequireInternet]"
                   value="1" 
                   {% if venue and venue.adminRequireInternet %}checked{% endif %}>
                </div>

                  <div class="mb-4">
                    <label for="movieDropdown" class="block text-white text-sm font-bold mb-2">Choose Movies:</label>
                    <select id="movieDropdown" name="fields[movies][]" class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" multiple>
                        <option value="">Select Movies</option>
                        {% set movies = craft.entries.section('movies').authorId(user.id).all() %}
                        {% for movie in movies %}
                            <option value="{{ movie.id }}"
                                    {% if movie.id in selectedMovies|map(movie => movie.id) %}selected{% endif %}>
                                {{ movie.title }}
                            </option>
                        {% endfor %}
                    </select>




                  </div>
                

                <div class="flex items-center justify-between">
                    <button class="bg-teal-700 hover:bg-teal-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                       submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
        
    </main>
    
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function () {
    var elem = document.getElementById('movieDropdown');
    var choices = new Choices(elem, {
        removeItemButton: true,
        maxItemCount: -1,  // No limit on number of items you can select
        searchEnabled: true,
        searchChoices: true,
        searchResultLimit: 5,
        renderChoiceLimit: -1, // Render all choices in the dropdown
        placeholderValue: 'Select Movies',
        placeholder: true,  // Adds placeholder text when input is empty
    });
});
</script>



{% endblock %}
